<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginStart="@dimen/standard_margin"
    android:layout_marginEnd="@dimen/standard_margin"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="@dimen/small_margin"
    android:layout_marginTop="@dimen/standard_margin"
    android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/standard_margin">

            <ImageView
                android:id="@+id/doctorImg"
                android:layout_height="100dp"
                android:layout_width="90dp"
                android:src="@drawable/doctor_img"
                android:layout_marginStart="@dimen/standard_margin"
                android:layout_marginTop="@dimen/standard_margin"
                app:layout_constraintDimensionRatio="15:17"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/nameText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/doctorImg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/doctorImg"
                android:layout_marginStart="@dimen/normal_margin"
                android:layout_marginEnd="@dimen/standard_margin"
                android:fontFamily="@font/poppins_medium"
                android:textSize="@dimen/large_text"
                android:textColor="@color/dark_base"/>

            <TextView
                android:id="@+id/degreeText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/doctorImg"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/extra_small_margin"
                app:layout_constraintTop_toBottomOf="@+id/nameText"
                android:layout_marginStart="@dimen/normal_margin"
                android:layout_marginEnd="@dimen/standard_margin"
                android:fontFamily="@font/poppins"
                android:textSize="@dimen/extra_small_text"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/languageText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/doctorImg"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/small_margin"
                app:layout_constraintTop_toBottomOf="@+id/degreeText"
                android:layout_marginStart="@dimen/normal_margin"
                android:layout_marginEnd="@dimen/standard_margin"
                android:fontFamily="@font/poppins_medium"
                android:text="English"
                android:drawablePadding="@dimen/small_margin"
                android:textSize="@dimen/extra_small_text"
                android:textColor="@color/black"
                app:drawableStartCompat="@drawable/ic_vet_chat" />




        </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>